<div class="container" style='max-width:900px;'>
  <h1><%= @title %></h1>
  <table class="table row">
    <tr>
      <th class="col-sm-1">順位</th>
      <th class="col-sm-3">画像</th>
      <th class="col-sm-8">商品名</th>
    </tr>
    <% @items.each.with_index(1) do |item, index| %>
    <tr>
      <td><%= index %></td>
      <td><%= link_to image_tag(item.medium_image), item %></td>
      <td><%= link_to item.title, item %></td>
    </tr>
    <% end %>
  </table>
</div>